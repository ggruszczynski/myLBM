<?xml version="1.0"?>

<case>

    <BCValues>
		<uLid>0</uLid> <!-- Lid velocity -->
		<uInlet>0.05</uInlet> <!-- inlet velocity (channel flow) -->
		<nu>0.02		</nu> <!-- kinematic viscosity -->
    </BCValues>
	
	<Obstacle>
		<x>200</x> <!-- x position of the cylinder -->
		<y>100</y> <!-- y position of the cylinder -->
		<r>30</r> <!-- radius of the cylinder-->
	</Obstacle>
	
	<PassiveScalarBlobb>
		<T>300</T>
		<K>0.2</K> <!-- thermal diffusivity [lu^2/ts]-->
		<x>75</x> <!-- x position of the cylinder -->
		<y>75</y> <!-- y position of the cylinder -->
		<r>10</r> <!-- radius of the cylinder-->
	</PassiveScalarBlobb>
	
	<Timer>
		<totalTime>40000</totalTime><!-- number of timeSteps -->
		<timeToSaveVTK>150</timeToSaveVTK><!-- after timeToSaveVTK amount of steps -> save VTK -->
		<timeToSavePointData>50</timeToSavePointData> <!-- after timeToSaveVTK amount of steps -> save Point Data -->
	</Timer>

	<BlockGeom>
		<x>1000</x> <!-- x mesh size -->
		<y>200</y> <!-- y mesh size -->
	</BlockGeom>
	
</case>